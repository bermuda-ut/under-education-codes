<%= render 'shared/title', title: "All Recipes" %>

<% @recipes.each do |r| %>
  <div class="row">
    <div class="col-md-4 center">
      <%= if r.picture? then image_tag(r.picture.url, class: "recipe_pic_list") 
      else render 'shared/no_picture' end%>
    </div>

    <div class="col-md-6 well">
      <h4><%= link_to r.name, recipe_path(r) %></h4>
      <p><%= r.summary %></p>
      <p>
      <span class='quiet'><small> <%= time_ago_in_words(r.created_at) %> ago</small></span>
      </p>

      <div class="pull-right">
        <i class="glyphicon glyphicon-thumbs-up"></i>
        &nbsp;<%= r.thumbsup_total %>
        &nbsp;&nbsp;&nbsp;
        <i class="glyphicon glyphicon-thumbs-down"></i>
        &nbsp;<%= r.thumbsdown_total %>
      </div>

    </div>

    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for r.chef, size: 100 %>
        <h5>Created by <%= r.chef.name %></h5>
      </section>
    </div>


  </div>
  <hr/>
<% end %>
